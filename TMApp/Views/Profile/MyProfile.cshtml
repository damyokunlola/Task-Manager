@model TMApp.Models.Register
@{
    ViewBag.Title = "MyProfile";
    Layout = "~/Views/Shared/_UserLayout.cshtml";

}

@section scripts{

    <script src="~/js/MyScript.js"></script>
}

<section class="pricing_area area-padding-top">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="area-heading">

                    <div class="form-inline" style="float:right">

                        <input type="button" value="Change Password" class="btn btn-link" id="changepwd"
                               onclick="location.href='@Url.Action("ChangePwdView","ChangePwd")'" />



                        <input type="button" value="Edit Profile" class="btn btn-link" id="editprofile"
                               onclick="location.href='@Url.Action("UpdateProfileView","UpdateProfile")'" />

                    </div>
                    <h2 class="bg-transparent" style="color:#000000;text-align:center;padding-top:10px">My Profile</h2>
                    <br />
                    <div class="clearfix">
                        <div class="float-right" style="margin-bottom:10px">

                            <img id="UserImg" alt="Picture" src="@Url.Content(Model.ProfilePic)" class="img-thumbnail" style="width:150px;height:150px" />
                            @*<input class="form-control-file" id="UserimgId" type="file" name="ImageFile" accept="image/*" readonly />*@
                        </div>
                    </div>

                    @using (Html.BeginForm("MyProfile", "Profile", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken();


                        <div class="form-group row">
                            @Html.LabelFor(model => model.Name, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", id = "txtname", @type = "Text", })
                            </div>
                            <p style="color:red"> @Html.ValidationMessageFor(model => model.Name)</p>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Email, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", id = "txtemail", @type = "Email" })
                            </div>
                            <p style="color:red"> @Html.ValidationMessageFor(model => model.Email)</p>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.PhoneNo, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.PhoneNo, new { @class = "form-control", id = "txtnum", @type = "number" })
                            </div>
                            <p style="color:red"> @Html.ValidationMessageFor(model => model.PhoneNo)</p>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.Username, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.Username, new { @class = "form-control", id = "txtusername", @type = "text", })
                            </div>
                            <p style="color:red"> @Html.ValidationMessageFor(model => model.Username)</p>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Country, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.Country, new { @class = "form-control", @placeholder = "Country", @type = "Text", @required = "required", id = "txtCountry" })


                            </div>
                            <p style="color:red"> @Html.ValidationMessageFor(model => model.Country)</p>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.State, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.State, new { @class = "form-control", @placeholder = "State", @type = "Text", @required = "required", id = "txtState" })


                            </div>
                            <p style="color:red"> @Html.ValidationMessageFor(model => model.State)</p>
                        </div>

                        <br />


                        @Html.Raw(TempData["Error"]);
                        @Html.Raw(TempData["editmsg"]);

                    }


                </div>
            </div>
        </div>
    </div>
</section>






<br /><br />
<section class="container">
    <fieldset style="border-radius:10px; color:black;background-color:ghostwhite;padding-left:30px;padding-right:30px"></fieldset>
    <br /><br />






</section>




