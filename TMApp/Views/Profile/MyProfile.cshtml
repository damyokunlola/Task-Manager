@model TMApp.Models.Register
@{
    ViewBag.Title = "MyProfile";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<br /><br />
      <div class="container" style="padding-left:150px">
          <div style="height:600px; width:800px;border-radius:10px; color:black;background-color:ghostwhite;padding-left:30px;padding-right:30px">
              <h2 class="bg-transparent" style="color:#000000;text-align:center;padding-top:10px">My Profile</h2>
              <br />
              @using (Html.BeginForm())
              {


              <div class="form-inline" style="float:right">

                  <button class="btn btn-info" id="editprofile" onclick="displayHide()" >Edit Profile</button>

                  <button class="btn btn-info" id="changepwd">Change Password</button>
              </div>
              <br />
              <br />

              <br /><br />

              <form class="form-control-file" style="padding-left:30px; padding-top:30px;padding-right:30px;color:black">


                  <div class="form-group row">
                      @Html.LabelFor(model => model.Name, new { @class = "col-sm-2 col-form-label" })
                      <div class="col-sm-10">
                          @Html.TextBoxFor(model =>model.Name, new { @class = "form-control", @type = "Text", @disabled = "disabled",})
                      </div>
                  </div>
                  <div class="form-group row">
                      @Html.LabelFor(model => model.Email, new { @class = "col-sm-2 col-form-label" })
                      <div class="col-sm-10">
                          @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @type = "Email", @disabled = "disabled" })
                      </div>
                  </div>
                  <div class="form-group row">
                      @Html.LabelFor(model => model.PhoneNo, new { @class = "col-sm-2 col-form-label" })
                      <div class="col-sm-10">
                          @Html.TextBoxFor(model => model.PhoneNo, new { @class = "form-control", @type = "number", @disabled = "disabled" })
                      </div>
                  </div>

                  <div class="form-group row">
                      @Html.LabelFor(model => model.Username, new { @class = "col-sm-2 col-form-label" })
                      <div class="col-sm-10">
                          @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @type = "text", @disabled = "disabled" })
                      </div>
                  </div>

                  <div class="form-group row">
                      @Html.LabelFor(model => model.Country, new { @class = "col-sm-2 col-form-label" })
                      <div class="col-sm-10">
                          @Html.TextBoxFor(model => model.Country, new { @class = "form-control", @type = "text", @disabled = "disabled" })
                      </div>
                  </div>

                  <div class="form-group row">
                      @Html.LabelFor(model => model.State, new { @class = "col-sm-2 col-form-label" })
                      <div class="col-sm-10">
                          @Html.TextBoxFor(model => model.State, new { @class = "form-control", @type = "text", @disabled = "disabled" })
                      </div>
                  </div>
                  <br />
                  <div class="form-group row" style="padding-left:250px">
                      <span><button class="btn btn-info" type="submit" id="save" style="display:none">Save Changes</button></span>
                      <span><button class="btn btn-info" type="reset" id="cancel" style="display:none">Cancel</button></span>
                  </div>
              </form>
            @Html.Raw(TempData["Error"]); 

              
              }

          </div>

              
      </div>

