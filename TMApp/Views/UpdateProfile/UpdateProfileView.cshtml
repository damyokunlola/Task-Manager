@model TMApp.Models.Register
@{
    ViewBag.Title = "UpdateProfileView";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@section scripts{ 

    <script src="~/js/MyScript.js"></script>
}

<section class="pricing_area area-padding-top">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="area-heading">
                    <div class="form-inline" style="float:right">

                        <input type="button" value="Change Password" class="btn btn-link" id="changepwd"
                               onclick="location.href='@Url.Action("PasswordView","Profile")'"  style="color:black"/>
                    </div>

                    <h2 class="bg-transparent" style="color:#000000;text-align:center;padding-top:10px">My Profile</h2>


                    <br />
                    @using (Html.BeginForm("UpdateProfile", "UpdateProfile", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken();

                        <div class="clearfix">
                            <div class="fa-pull-right" style="margin-bottom:10px">
                                <img id="UserImg" alt="" src=" @Url.Content(Model.ProfilePic)" class="img-thumbnail" style="width:150px;height:150px" />

                                <input class="form-control-file" id="UserimgId" type="file" name="ImageFile" accept="image/*" readonly />
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.Name, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", id = "txtname", @type = "Text", })
                            </div>
                            <p style="color:red"> @Html.ValidationMessageFor(model => model.Name)</p>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.PhoneNo, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.PhoneNo, new { @class = "form-control", id = "txtnum", @type = "number" })
                            </div>
                            <p style="color:red"> @Html.ValidationMessageFor(model => model.PhoneNo)</p>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.Username, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.Username, new { @class = "form-control", id = "txtusername", @type = "text", })
                            </div>
                            <p style="color:red"> @Html.ValidationMessageFor(model => model.Username)</p>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Country, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.Country, new { @class = "form-control", @placeholder = "Country", @type = "Text", id = "txtCountry" })


                            </div>
                            <p style="color:red"> @Html.ValidationMessageFor(model => model.Country)</p>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.State, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.State, new { @class = "form-control", @placeholder = "State", @type = "Text", id = "txtState" })


                            </div>
                            <p style="color:red"> @Html.ValidationMessageFor(model => model.State)</p>
                        </div>

                        <br />
                        <div class="form-group row" style="padding-left:250px">
                            <span><button class="btn btn-info" type="submit" id="save">Save Changes</button></span>

                            <br /><br /><br />
                        </div>

                        @*@Html.Raw(TempData["Error"]);*@
                        @Html.Raw(TempData["editmsg"]);

                    }


                </div>
            </div>
        </div>
    </div>
</section>





