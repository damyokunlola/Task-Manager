@model TMApp.Models.Contact
@{
    ViewBag.Title = "ContactView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




    <section class="hero-banner d-flex align-items-center">
        <div class="container text-center">
            <h2>Contact Us</h2>
            @*<nav aria-label="breadcrumb" class="banner-breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Contact Us</li>
                </ol>
            </nav>*@
        </div>
    </section>
      
    <section class="pricing_area area-padding-top">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="area-heading">
                     
                        <p>
                            Do you have any questions? Please do not hesitate to contact us directly. Our team will come back to you within
                            a matter of hours to help you.
                        </p>
                        @using (Html.BeginForm("Message", "Contact", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div>
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control ", type = "text", id = "name", placeholder = "Your Name" })

                                    <p class="validation"> @Html.ValidationMessageFor(model => model.Name)</p>
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email", id = "email", placeholder = "Your Email", })

                                    <p class="validation"> @Html.ValidationMessageFor(model => model.Email)</p>
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.Subject, new { @class = "form-control", type = "text", id = "subject", placeholder = "Subject", })


                                </div>
                                <div class="form-group">
                                    @Html.TextAreaFor(model => model.Message, new { @class = "form-control md-textarea", type = "text", id = "message", placeholder = "Message", row=6})
                                    <p class="validation">@Html.ValidationMessageFor(model => model.Message)</p>

                                </div>
                                <div class="text-center">
                                    <button @("Message") type="submit" class="btn btn-primary btn-block" style="background-color: #db4c3f; border-color: #db4c3f;">Submit Message</button>
                                </div>

                                @Html.Raw(TempData["msg"])
                            </div>
                        }

                      
                    </div>
                </div>
            </div>
        </div>
    </section>


